<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="203dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/shopping"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:fontFamily="serif"
            android:text="Login"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />




        <LinearLayout
            android:elevation="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#0C8F3636"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">





                <EditText
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:drawableRight="@drawable/baseline_mail_24"
                    android:padding="6dp"
                    android:background="@drawable/login_custom"
                    android:id="@+id/edittext_email"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:hint="Email Id"
                    android:inputType="text"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:fontFamily="serif"
                    android:textCursorDrawable="@drawable/login_custom" />


                <EditText
                    android:layout_gravity="center"
                    android:drawableRight="@drawable/baseline_password_24"
                    android:layout_marginTop="10dp"
                    android:padding="6dp"
                    android:background="@drawable/login_custom"
                    android:id="@+id/edittext_password"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:fontFamily="serif"
                    android:textCursorDrawable="@drawable/login_custom" />





            <Button
                android:onClick="Login"
                android:layout_marginBottom="10dp"
                android:id="@+id/next"
                android:paddingRight="60dp"
                android:paddingLeft="60dp"
                android:textColor="@android:color/white"
                android:background="@drawable/login_button_custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:fontFamily="serif"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/token"
                android:padding="5dp"
                android:text="token"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>




    </LinearLayout>




    </RelativeLayout>
</ScrollView>