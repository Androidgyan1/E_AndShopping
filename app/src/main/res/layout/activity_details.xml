<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:paddingRight="5dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/card_recyclebest"
        app:cardElevation="8dp">


        <LinearLayout
            android:id="@+id/lk"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/category_image"
                android:scaleType="fitXY"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

<TextView
    android:fontFamily="serif"
    android:layout_below="@+id/rupee"
    android:id="@+id/detail_title"
    android:layout_marginTop="6dp"
    android:layout_marginLeft="10dp"
    android:textSize="16sp"
    android:text="Title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>


    <TextView
        android:padding="5dp"
        android:textColor="@android:color/white"
        android:background="@android:color/darker_gray"
        android:textStyle="bold"
        android:layout_below="@+id/detail_title"
        android:id="@+id/descripation_static"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:text="Descripation - "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>






    <TextView
        android:fontFamily="serif"
        android:layout_below="@+id/descripation_static"
        android:id="@+id/detail_descripation"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="4dp"
        android:textSize="16sp"
        android:text="Descripation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




    <TextView
        android:layout_below="@+id/card_recyclebest"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:id="@+id/detail_price"
        android:textSize="20sp"
        android:text="s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/rupee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_recyclebest"
        android:layout_alignLeft="@id/detail_price"
        android:layout_marginLeft="-12dp"
        android:text="â‚¹"
        android:textSize="20sp" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/detail_descripation"
        android:id="@+id/detail_category"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:text="Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>





<Button
    android:onClick="AddtoCart"
    android:textColor="@android:color/white"
    android:padding="5dp"
    android:background="@drawable/button_item"
    android:layout_marginRight="5dp"
    android:text="Add to Cart"
    android:layout_marginBottom="5dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:layout_width="wrap_content"
    android:layout_height="50dp"/>


    </RelativeLayout>

</RelativeLayout>